
@model dishInfoPackage

<div class="container mt-5">
    <div class="text-center">
        <a href="allChefs" class="mt-3 btn btn-primary mr-5">Chefs</a>
        <a href="allDishes" class="mt-3 btn btn-success m1-5">Dishes</a>
    </div>
    <hr>
    <div class="text-right mb-5">
        <a class="btn btn-success text-light" data-toggle="modal" data-target="#addDish">Add a Dish</a>
    </div>

    <h4 class="font-weight-light">Yum, take a look at out tasty dishes! <i class="fas fa-utensils"></i></h4>
    <hr>
    <div class="all_dishes">
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Chef</th>
                    <th scope="col">Tastiness</th>
                    <th scope="col">Calories</th>

                </tr>
            </thead>
            <tbody>
                @foreach(var dish in Model.allDishes)
                {
                    <tr>
                        <th scope="row">@dish.name</th>
                        <td>@dish.theChef.firstname @dish.theChef.lastname</td>
                        <td>@dish.tastiness</td>
                        <td>@dish.calories</td>
                        
                    </tr>
                }
                

            </tbody>
        </table>

    </div>


<!-- Modal -->

    <div class="modal fade" id="addDish" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addDish">Prepare a new Dish</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="addDish" method="post">
                <div class="modal-body font-weight-light">
                    
                        <div class="form-group">
                            <label asp-for="dish.name"></label>
                            <input asp-for="dish.name" class="form-control">
                            <small><span asp-validation-for="dish.name" class="font-weight-bold text-danger"></span></small>
                        </div>

                        <div class="form-group">
                            <label asp-for="dish.chef_id"></label>
                            <select asp-for="dish.chef_id" class="form-control">
                                @foreach(var chef in Model.allChefs)
                                {
                                    <option value="@chef.chef_id" >@chef.firstname @chef.lastname</option>
                                }
                            </select>
                            <small><span asp-validation-for="dish.chef_id" class="font-weight-bold text-danger"></span></small>
                        </div>

                        <div class="form-group">
                            <label asp-for="dish.tastiness"></label>
                            <select asp-for="dish.tastiness" class="form-control">
                                
                                <option value="1" >1</option>
                                <option value="2" >2</option>
                                <option value="3" >3</option>
                                <option value="4" >4</option>
                                <option value="5" >5</option>
                            </select>
                            <small><span asp-validation-for="dish.tastiness" class="font-weight-bold text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="dish.calories"></label>
                            <input asp-for="dish.calories"class="form-control">
                            <small><span asp-validation-for="dish.calories" class="font-weight-bold text-danger"></span></small>
                        </div>
                        <div class="form-group">
                            <label asp-for="dish.description"></label>
                            <textarea asp-for="dish.description" cols="30" rows="5" class="form-control"></textarea>
                            <small><span asp-validation-for="dish.description" class="font-weight-bold text-danger"></span></small>
                        </div>

                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success shadow">Add Dish</button>
                </div>
            </form>
            </div>
        </div>
    </div>



</div>